---
import Navigation from "./Navigation.astro";
import LanguageSwitcher from "../UI/LanguageSwitcher.astro";
import { getLocale, getLocalizedPath } from '../../i18n/utils';

const locale = getLocale(Astro.url.pathname);
const homeHref = getLocalizedPath('/', locale);
---

<header class="sticky top-0 z-50 w-full bg-white/90 backdrop-blur-md shadow-sm">
  <div class="container flex items-center justify-between h-20">
    <a href={homeHref} class="text-2xl font-bold text-primary-800 font-serif flex items-center">
      <img
              src="/uploads/logo-long.svg"
              alt="logo"
              class="h-16 w-auto text-primary-600 mr-2"
      />
    </a>
    
    <div class="flex items-center gap-4">
      <Navigation />
      <LanguageSwitcher />
    </div>
  </div>
</header>