---
import Button from "../UI/Button.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "Ariane Mader",
  subtitle = "A human!",
  backgroundImage = "/uploads/hero-bg.jpg",
  ctaText,
  ctaLink,
  secondaryCtaText,
  secondaryCtaLink,
} = Astro.props;

// Only show buttons if BOTH text + link exist
const showPrimary = Boolean(ctaText && ctaLink);
const showSecondary = Boolean(secondaryCtaText && secondaryCtaLink);
const showAnyCta = showPrimary || showSecondary;
---

<section
  class="relative min-h-[50vh] flex items-center bg-cover pt-30"
  style={`background-image: url(${backgroundImage}); background-position: center 20%;`}
>
  <div class="container">
    <div class="max-w-3xl text-white">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">{title}</h1>
      <p class="text-xl md:text-2xl mb-8">{subtitle}</p>

      {showAnyCta && (
        <div class="flex flex-wrap gap-4">
          {showPrimary && (
            <Button href={ctaLink} variant="primary" size="lg">
              {ctaText}
            </Button>
          )}

          {showSecondary && (
            <Button
              href={secondaryCtaLink}
              variant="outline"
              size="lg"
              class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm"
            >
              {secondaryCtaText}
            </Button>
          )}
        </div>
      )}
    </div>
  </div>
</section>