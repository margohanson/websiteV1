---
export interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: string;
}

const { 
  title, 
  subtitle, 
  backgroundImage = "/uploads/page-header-bg.webp" 
} = Astro.props;

const base = import.meta.env.BASE_URL;
// Prepend base to relative URLs (starting with /)
const finalBackgroundImage = backgroundImage && backgroundImage.startsWith('/') && !backgroundImage.startsWith('//') 
  ? `${base}${backgroundImage.slice(1)}` 
  : backgroundImage;
---

<section 
  class="relative py-20 bg-cover bg-center"
  style={`background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(${finalBackgroundImage})`}
>
  <div class="container">
    <div class="max-w-3xl mx-auto text-center text-white">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-white">{title}</h1>
      {subtitle && <p class="text-xl md:text-2xl">{subtitle}</p>}
    </div>
  </div>
</section>