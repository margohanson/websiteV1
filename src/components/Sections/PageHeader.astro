---
export interface Props {
  title: string;
  subtitle?: string;
  backgroundImage: string;
  overlayOpacity?: number; // 0 → no darkening, 1 → fully black
}

const {
  title,
  subtitle,
  backgroundImage,
  overlayOpacity = 0, // default: no darkening
} = Astro.props;
---

<section
  class="relative py-20 bg-cover bg-center"
  style={`background-image: ${
    overlayOpacity > 0
      ? `linear-gradient(rgba(0,0,0,${overlayOpacity}), rgba(0,0,0,${overlayOpacity})), `
      : ""
  }url(${backgroundImage})`}
