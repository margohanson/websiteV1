  <script>
    // Infinite carousel logic with seamless looping
    document.addEventListener("DOMContentLoaded", () => {
      const track = document.getElementById("t-track");
      const prevBtn = document.getElementById("t-prev");
      const nextBtn = document.getElementById("t-next");
      const dotsWrap = document.getElementById("t-dots");

      if (!track || !prevBtn || !nextBtn || !dotsWrap) return;

      // Get original slides
      const originalSlides = Array.from(track.querySelectorAll("li"));
      const total = originalSlides.length;

      if (total === 0) return;

      // Clone first and last slides for infinite effect
      const firstClone = originalSlides[0].cloneNode(true);
      const lastClone = originalSlides[total - 1].cloneNode(true);
      
      firstClone.setAttribute("data-clone", "first");
      lastClone.setAttribute("data-clone", "last");
      
      track.appendChild(firstClone);
      track.insertBefore(lastClone, originalSlides[0]);

      // Get all slides including clones
      const allSlides = Array.from(track.querySelectorAll("li"));
      const realIndexOffset = 1; // Because we prepended the last clone

      // Calculate real index from slide position
      const getRealIndex = (slideIndex) => {
        if (slideIndex === 0) return total - 1; // Last clone
        if (slideIndex === allSlides.length - 1) return 0; // First clone
        return slideIndex - realIndexOffset; // Real slides
      };

      // Calculate slide index from real index
      const getSlideIndex = (realIndex) => {
        return realIndex + realIndexOffset;
      };

      let realIndex = 0;
      let isTransitioning = false;
      let isRepositioning = false;
      let lastScrollLeft = track.scrollLeft;
      let scrollDirection = 0; // 1 = forward, -1 = backward

      // Initialize: scroll to first real slide (not the cloned last one)
      const initializeCarousel = () => {
        const firstRealSlideIndex = getSlideIndex(0);
        allSlides[firstRealSlideIndex].scrollIntoView({ behavior: "auto", inline: "start", block: "nearest" });
        realIndex = 0;
        lastScrollLeft = track.scrollLeft;
        updateUI();
      };

      const buildDots = () => {
        dotsWrap.innerHTML = "";
        originalSlides.forEach((_, i) => {
          const b = document.createElement("button");
          b.type = "button";
          b.className =
            "h-2.5 w-2.5 rounded-full transition-colors " +
            (i === realIndex ? "bg-[#193472]" : "bg-gray-300 hover:bg-gray-400");
          b.setAttribute("aria-label", `Go to testimonial ${i + 1} of ${total}`);
          b.addEventListener("click", () => goTo(i));
          dotsWrap.appendChild(b);
        });
      };

      const updateUI = () => {
        buildDots();
        // Never disable buttons in infinite carousel
        prevBtn.disabled = false;
        nextBtn.disabled = false;
      };

      const goTo = (targetRealIndex, smooth = true) => {
        if (isTransitioning) return;
        
        const wrappedIndex = ((targetRealIndex % total) + total) % total; // Handle negative wrap
        
        // Determine if we're wrapping around
        let targetSlideIndex;
        let needsReposition = false;
        
        if (wrappedIndex === 0 && realIndex === total - 1) {
          // Going from last to first - use cloned first slide at the end
          targetSlideIndex = allSlides.length - 1; // Last slide (cloned first)
          needsReposition = true;
        } else if (wrappedIndex === total - 1 && realIndex === 0) {
          // Going from first to last - use cloned last slide at the beginning
          targetSlideIndex = 0; // First slide (cloned last)
          needsReposition = true;
        } else {
          // Normal navigation
          targetSlideIndex = getSlideIndex(wrappedIndex);
        }
        
        realIndex = wrappedIndex;
        isTransitioning = true;
        
        allSlides[targetSlideIndex].scrollIntoView({ 
          behavior: smooth ? "smooth" : "auto", 
          inline: "start", 
          block: "nearest" 
        });
        
        updateUI();
        
        // After smooth scroll completes, silently reposition if on a clone
        if (smooth && needsReposition) {
          setTimeout(() => {
            // Temporarily disable scroll event listener
            isRepositioning = true;
            isTransitioning = true;
            
            // Get the target real slide's position
            const targetRealSlideIndex = getSlideIndex(wrappedIndex);
            const targetSlide = allSlides[targetRealSlideIndex];
            const targetRect = targetSlide.getBoundingClientRect();
            const trackRect = track.getBoundingClientRect();
            
            // Calculate the exact scroll position needed
            const scrollOffset = targetRect.left - trackRect.left + track.scrollLeft;
            
            // Instantly set scroll position without triggering scroll events
            track.style.scrollBehavior = 'auto';
            track.scrollLeft = scrollOffset;
            
            // Update lastScrollLeft to prevent scroll direction detection
            lastScrollLeft = track.scrollLeft;
            
            // Re-enable smooth scrolling
            setTimeout(() => {
              track.style.scrollBehavior = '';
              isRepositioning = false;
              isTransitioning = false;
            }, 50);
          }, 600);
        } else {
          setTimeout(() => {
            isTransitioning = false;
          }, smooth ? 500 : 0);
        }
      };

      // Arrow handlers
      prevBtn.addEventListener("click", () => {
        goTo(realIndex - 1);
      });
      
      nextBtn.addEventListener("click", () => {
        goTo(realIndex + 1);
      });

      // Handle infinite loop when reaching clones (for manual scrolling/swiping)
      let scrollTimeout;
      
      track.addEventListener("scroll", () => {
        const currentScrollLeft = track.scrollLeft;
        scrollDirection = currentScrollLeft > lastScrollLeft ? 1 : -1;
        lastScrollLeft = currentScrollLeft;
        
        if (isTransitioning || isRepositioning) return;
        
        window.clearTimeout(scrollTimeout);
        scrollTimeout = window.setTimeout(() => {
          const trackLeft = track.getBoundingClientRect().left;
          let closestSlide = null;
          let closestDist = Infinity;
          let closestIndex = 0;

          allSlides.forEach((slide, i) => {
            const rect = slide.getBoundingClientRect();
            const dist = Math.abs(rect.left - trackLeft);
            if (dist < closestDist) {
              closestDist = dist;
              closestSlide = slide;
              closestIndex = i;
            }
          });

          // Check if we're on a clone and need to silently reposition
          if (closestSlide && closestDist < 10) {
            const isFirstClone = closestSlide.getAttribute("data-clone") === "first";
            const isLastClone = closestSlide.getAttribute("data-clone") === "last";
            
            if (isFirstClone) {
              // Silently reposition to real first slide (no animation)
              isRepositioning = true;
              const targetRealSlideIndex = getSlideIndex(0);
              const targetSlide = allSlides[targetRealSlideIndex];
              const targetRect = targetSlide.getBoundingClientRect();
              const trackRect = track.getBoundingClientRect();
              const scrollOffset = targetRect.left - trackRect.left + track.scrollLeft;
              
              track.style.scrollBehavior = 'auto';
              track.scrollLeft = scrollOffset;
              realIndex = 0;
              updateUI();
              
              setTimeout(() => {
                track.style.scrollBehavior = '';
                isRepositioning = false;
              }, 10);
            } else if (isLastClone) {
              // Silently reposition to real last slide (no animation)
              isRepositioning = true;
              const targetRealSlideIndex = getSlideIndex(total - 1);
              const targetSlide = allSlides[targetRealSlideIndex];
              const targetRect = targetSlide.getBoundingClientRect();
              const trackRect = track.getBoundingClientRect();
              const scrollOffset = targetRect.left - trackRect.left + track.scrollLeft;
              
              track.style.scrollBehavior = 'auto';
              track.scrollLeft = scrollOffset;
              realIndex = total - 1;
              updateUI();
              
              setTimeout(() => {
                track.style.scrollBehavior = '';
                isRepositioning = false;
              }, 10);
            } else {
              // Update real index based on current slide
              realIndex = getRealIndex(closestIndex);
              updateUI();
            }
          } else if (closestSlide) {
            // Update real index based on current slide (normal scrolling)
            realIndex = getRealIndex(closestIndex);
            updateUI();
          }
        }, 150);
      });

      // Initialize carousel
      initializeCarousel();

      // Testimonial "Read more/less" toggle functionality
      const handleTestimonialToggle = (contentId, expand) => {
        const content = document.getElementById(contentId);
        if (!content) return;

        const testimonialBox = content.closest(".testimonial-box");
        const expandable = testimonialBox?.querySelector(".testimonial-expandable");
        const toggleMore = expandable?.querySelector(".testimonial-toggle");
        const ellipsis = expandable?.querySelector(".testimonial-ellipsis");
        const toggleLess = content.querySelector(".testimonial-toggle-close");

        if (expand) {
          // Expand
          content.classList.remove("hidden");
          if (toggleMore) {
            toggleMore.querySelector(".testimonial-more").classList.add("hidden");
            toggleMore.setAttribute("aria-expanded", "true");
          }
          if (ellipsis) ellipsis.classList.add("hidden");
          
          // Temporarily allow box to grow
          if (testimonialBox) {
            testimonialBox.style.height = "auto";
            setTimeout(() => {
              const newHeight = testimonialBox.offsetHeight;
              testimonialBox.style.height = `${newHeight}px`;
            }, 10);
          }
        } else {
          // Collapse
          content.classList.add("hidden");
          if (toggleMore) {
            toggleMore.querySelector(".testimonial-more").classList.remove("hidden");
            toggleMore.setAttribute("aria-expanded", "false");
          }
          if (ellipsis) ellipsis.classList.remove("hidden");
          
          // Reset box height and recalculate uniform heights
          if (testimonialBox) {
            testimonialBox.style.height = "";
            setTimeout(() => {
              setUniformHeights();
            }, 300);
          }
          
          // Smooth scroll to "Read more" button
          if (toggleMore) {
            toggleMore.scrollIntoView({ behavior: "smooth", block: "nearest" });
          }
        }
      };

      // Handle "Read more" buttons
      const testimonialToggles = document.querySelectorAll(".testimonial-toggle");
      testimonialToggles.forEach((toggle) => {
        toggle.addEventListener("click", (e) => {
          e.preventDefault();
          const contentId = toggle.getAttribute("aria-controls");
          handleTestimonialToggle(contentId, true);
        });
      });

      // Handle "Read less" buttons
      const testimonialToggleCloses = document.querySelectorAll(".testimonial-toggle-close");
      testimonialToggleCloses.forEach((toggle) => {
        toggle.addEventListener("click", (e) => {
          e.preventDefault();
          const contentId = toggle.getAttribute("aria-controls");
          handleTestimonialToggle(contentId, false);
        });
      });

      // Set uniform height for all testimonial boxes
      const setUniformHeights = () => {
        const testimonialBoxes = document.querySelectorAll(".testimonial-box");
        if (testimonialBoxes.length === 0) return;

        // Reset heights to measure natural heights
        testimonialBoxes.forEach((box) => {
          box.style.height = "auto";
        });

        // Find the maximum height
        let maxHeight = 0;
        testimonialBoxes.forEach((box) => {
          const height = box.offsetHeight;
          if (height > maxHeight) {
            maxHeight = height;
          }
        });

        // Set all boxes to the same height
        testimonialBoxes.forEach((box) => {
          box.style.height = `${maxHeight}px`;
        });
      };

      // Setup uniform heights after carousel initialization
      setTimeout(() => {
        setUniformHeights();
      }, 100);

      // Re-check on window resize
      let resizeTimeout;
      window.addEventListener("resize", () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          setUniformHeights();
        }, 250);
      });

      // Init
      buildDots();
      updateDisabled();
    });
  </script>

